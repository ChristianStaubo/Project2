<a href="/meals/allMeals" type="button" class="btn btn-outline-secondary mt-3 ml-5">Back</a>

<div class ="container-fluid text-center">
    <div class ="text-center">
          <div class ="col-md-12 col-sm-12 text-center mt-5" >
              <h2><%= meal.owner %>'s </h2>
            <h1>
                
                    <%= meal.name %>
            </h1>
            <p>Calories: <%= meal.calories %>
                <br>
            <p> Protein: <%= meal.protein %> g
                <br>
                <% if (meal.ingredients) {%> 
                    <p> ingredients: <%= meal.ingredients %>
                <br>
                        <% } else{ %>
                            <p>ingredients: N/A</p>
                            <br>
                            <% } %> 
                <% if (meal.optional) {%> 
            <p> Optional: <%= meal.optional %>
                <% } else{ %>
                    <p>Optional: N/A</p>
                    <% } %>
            <p>Number of likes: <%= meal.likes.length %>

            </div>

</div>

</div>


<div class="d-inline flex-column justify-content-between text-center mt-5">
        <form action='/meals/<%= meal.id %>?_method=DELETE' method="POST">
            <input type="submit" value="DELETE" />
        </form>
        <a href="/meals/<%= meal.id %>/edit">Edit Me</a>
</div>

